package initial;

import java.io.File;
import java.io.IOException;
import java.io.InputStream;
import java.util.Iterator;

import org.apache.commons.io.FileUtils;

public class App {

	public static void main(String[] args) {
		
		//File file = new File("C:\\Users\\PLN\\Desktop\\Workspace\\resources\\Ontologias\\TESTE");
		Process proc = null;
		String folderPath = args[0];
		String outPath = args[1];
		String topOnto = args[2];
		String tec = args[3];
		File file2 = new File(folderPath);
		String[] cmdarray = new String[5];
		
		cmdarray[0] = "java -jar ontoAli-pucrs-0.0.2.jar";
		cmdarray[2] = outPath;
		if(topOnto.equals("sumo")) {
			
		} else if(topOnto.equals("dolce")) {
			
		} else if(topOnto.equals("both")) {
			
		} else {
			System.out.println("Escolha entre dolce, sumo ou both!!");
		}
		cmdarray[3] = "sumo ou dolce, both";
		cmdarray[4] = " 1 ou 2";
		
		File[] vec = file2.listFiles();
		
		for(File f: vec) {
			if(f.isFile() && f.getName().endsWith(".owl") ) {
				cmdarray[1] = folderPath+ "/" + f.getName();
				
				try {
						proc = Runtime.getRuntime().exec(cmdarray);
						if(proc != null) {
							InputStream in = proc.getInputStream();
							InputStream err = proc.getErrorStream();
							System.out.println(in);
							System.out.println(err);
						}

				} catch (IOException e) {
					e.printStackTrace();
				}
				System.out.println(f.getName());
			}
		}

	}

}
